iF NOT EXISTS -> Para ver si la base de datos no existe
CREATE DATABASE IF NOT EXISTS Zapateria;

USE Zapato;

CREATE TABLE Zapatos (
    id int(11) NOT NULL AUTO_INCREMENT,
    nombre varchar(30) DEFAULT NULL,
    precio int(8) DEFAULT NULL,
    color varchar(35) DEFAULT NULL,
    PRIMARY KEY (id)
);

